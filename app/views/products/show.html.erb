<div class="row">
  <div class="col-lg-12">
    <h1>Product details</h1>
    <%= link_to "Back to products list", products_path, class: "btn btn-primary" %>
    <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary" %>
    <%= link_to "Destroy this product", @product, method: :delete, class: "btn btn-danger" %>
    <%= link_to "Create movement", new_movement_product_path(@product), class: "btn btn-success" %>

    <div class="card">
      <table class="table">
        <tr>
          <th>Product name</th>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <th>Product reference</th>
          <td><%= @product.reference %></td>
        <tr>
          <th>Product description</th>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <th>Product quantity</th>
          <td><%= 0 %></td>
        </tr>
        <tr>
          <th>Creation date</th>
          <td><%= @product.created_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="row" style="margin-top: 20px">
  <div class="col-lg-12">
    <div class="card" style="padding-top: 20px">
      <h1>Movements</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Type</th>
            <th>Quantity</th>
            <th>Comment</th>
            <th>Date/Time</th>
          </tr>
        </thead>
        <tbody>
          <% @product.movements.each do |movement| %>
            <tr>
              <td><%= movement.movement_type_name %></td>
              <td><%= movement.movement_quantity %></td>
              <td><%= movement.comment %></td>
              <td><%= movement.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>